{
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "NODE_OPTIONS": "--max-old-space-size=4096 --max-semi-space-size=128",
      "SKIP_ENV_VALIDATION": "1"
    }
  },
  "regions": ["iad1"],
  "outputDirectory": ".next"
}